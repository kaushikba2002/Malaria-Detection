<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="/stylesheets/home.css" rel="stylesheet" type="text/css">
</head>
<body class="d-flex flex-column vh-100">

  <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark ">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">MD</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/adminhome/<%=did%>"><i class="bi bi bi-house me-2"></i>Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/userregister/<%=did%>"><i class="bi bi-box-arrow-in-right"></i>  Register patient</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/adminlogout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
          </li>
        </ul>
    </div>
    </div>
  </nav>

    <main class="container mt-5">
        <%-include('./partials/flash')%>
        <!-- <h4>Patients:</h4> -->
        <table class="table table-success table-striped">
          <thead>
            <tr>
              <th scope="col">Patient name</th>
              <th scope="col">ID</th>
              <th scope="col">Status</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
      
            <%if(result.length!=0){%>
              <%for(let patient of result){%>
                  <tr class="">
              <td scope="row"><p><%= patient.first_name+" "+patient.middle_name+" "+patient.last_name%></p></td>  <!--patient.fname+patient.mname+patient.lname-->
              <td><%=patient.pid%></td>  <!--patient.pid-->
              <%if(patient.calcium==null){%>
              <td class="text-danger">Not generated</td>
              <%}%>
              <%if(patient.calcium!=null){%>
              <td class="text-success">Generated</td>
              <%}%>
              <td><form action="/userdetails/<%=did%>/<%=patient.pid%>"><button type="submit" class="btn btn-info">View</button></form>
              </td>
              <%if(patient.calcium!=null){%>
                <td><form action="/delete/<%=did%>/<%=patient.pid%>"><button type="submit" class="btn btn-danger">Delete</button></form></td>
              <%}%>
              <%if(patient.calcium==null){%>
                <td> </td>
                <%}%>
              
                  </tr>
              <%}%>
            <%}%>
          </tbody>
        </table>


</main>
<%-include('./partials/footer')%>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

<script src="/javascripts/validateForms.js"></script>
<script ></script>

    
</body>
</html>

